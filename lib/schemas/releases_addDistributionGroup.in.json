{
    "type": "object",
    "properties": {
        "release_id": {
            "required": true,
            "type": "integer"
        },
        "owner_name": {
            "required": true,
            "type": "string"
        },
        "app_name": {
            "required": true,
            "type": "string"
        },
        "requestBody": {
            "type": "object",
            "allOf": [
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "description": "Unique id of the release destination",
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    "required": [
                        "id"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "mandatory_update": {
                            "description": "Flag to mark the release for the provided destinations as mandatory",
                            "type": "boolean"
                        },
                        "notify_testers": {
                            "description": "Flag to enable or disable notifications to testers",
                            "type": "boolean",
                            "default": true
                        }
                    }
                }
            ]
        }
    }
}